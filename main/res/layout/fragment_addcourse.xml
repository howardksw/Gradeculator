<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">




        <LinearLayout
            android:weightSum="2"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal">



            <LinearLayout
                android:paddingLeft="20sp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="end|center_vertical"
                    android:textSize="15sp"
                    android:id="@+id/toolbar_cancel_addcourse"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical|end"
                    android:text="@string/cancel_btn"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:paddingRight="20sp"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal">

                <TextView
                    android:textSize="15sp"
                    android:id="@+id/toolbar_save_addcourse"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical|end"
                    android:text="@string/save_btn"
                    android:textAllCaps="true" />
            </LinearLayout>

        </LinearLayout>




    </android.support.v7.widget.Toolbar>


    <TableLayout
        android:id="@+id/nameLayout"
        android:paddingTop="20sp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        >

        <TableRow>
        <TextView
            android:textColor="@color/text_color"
            android:text="@string/name_label"
            android:paddingLeft="15sp"
            android:textSize="16sp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:textCursorDrawable="@null"
            android:layout_gravity="end"
            android:cursorVisible="false"
            android:textSize="17sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="25sp"
            android:gravity="right"
            android:inputType="text"
            android:id="@+id/course_name"
            android:layout_weight="5"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:hint = "@string/course_name"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:background="@android:color/transparent"
            />
        </TableRow>

    </TableLayout>

    <View
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color"/>


    <TableLayout
        android:id="@+id/titleLayout"
        android:paddingTop="10sp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp">

        <TableRow>
        <TextView
            android:textColor="@color/text_color"
            android:text="@string/title_label"
            android:paddingLeft="16dp"
            android:textSize="15sp"
            android:layout_weight="4"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:textCursorDrawable="@null"
            android:cursorVisible="false"
            android:inputType="text"
            android:textSize="17sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="25sp"
            android:gravity="right"
            android:layout_weight="5"
            android:layout_width ="0dp"
            android:id="@+id/course_title"
            android:layout_height="wrap_content"
            android:hint = "@string/course_title"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:background="@android:color/transparent"
            />
        </TableRow>
    </TableLayout>


    <View
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color"/>

    <TableLayout
        android:id="@+id/creditLayout"
        android:paddingTop="10sp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp">

        <TableRow>
        <TextView
            android:background="@android:color/transparent"
            android:textColor="@color/text_color"
            android:text="@string/credit_label"
            android:layout_weight="4"
            android:layout_width ="0dp"
            android:paddingLeft="15sp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:textCursorDrawable="@null"
            android:cursorVisible="false"
            android:textSize="17sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="25sp"
            android:id="@+id/credit"
            android:gravity="right"
            android:inputType="number"
            android:hint="3"
            android:layout_weight="5"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:background="@android:color/transparent"
            />
        </TableRow>
    </TableLayout>

    <View
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color"/>

    <TableLayout
        android:paddingTop="10sp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp">

        <TableRow>
        <TextView
            android:textColor="@color/text_color"
            android:text="@string/desired_grade_label"
            android:layout_weight="4"
            android:layout_width ="0dp"
            android:paddingLeft="15sp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            />

        <Spinner
            android:textColor="@drawable/spinner_selector"
            android:background="@android:color/transparent"
            android:textSize="17sp"
            android:layout_marginLeft="200sp"
            android:layout_marginRight="25sp"
            android:layout_weight="5"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/grade_spinner"
            android:drawSelectorOnTop="true"
            android:clickable="true"
            />
        </TableRow>
    </TableLayout>

    <View
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color"/>

    <TextView
        android:textColor="@color/text_color"
        android:text="@string/addCourseNote"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingTop="15sp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>